  sleep 0.5
  play chord(:D, :minor7), release: 1, amp: 0.75, pan: -0.1
  sleep 0.5
  play chord(:D, :min), release: 1, amp: 0.75, pan: 0.1
  sleep 0.25
  play chord(:D, :min), release: 1, amp: 0.75, pan: -0.1
