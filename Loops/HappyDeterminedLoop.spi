  with_fx :reverb do
    loop do
      theme
    end
  end
end

in_thread(name: :drums1) do
  with_fx :echo do
    loop do
      sample :drum_heavy_kick, amp: 1, attack: 0.04, pan: -0.1
      sleep 1
    end
  end
end

in_thread(name: :snregular) do
  with_fx :reverb do
    loop do
      if !tick.even?
        sample :sn_zome, attack: 0.04, pan: 0.1
      end
      sleep 0.5
    end
  end
end

in_thread(name: :sniregular) do
  with_fx :reverb do
    loop do
      sleep 6
      if tick.even?
        sample :sn_zome, attack: 0.04, pan: 0.1
        sleep 1
      end
    end
  end
end
